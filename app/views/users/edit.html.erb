<% provide(:title, t('menu.profile')) %>
<div class="page-header position-relative">
  <h1>
    <%= t('menu.profile') %>
    <small>
      <i class="icon-double-angle-right"></i>
      <%= t('users.you_can_edit_profile_here') %>
    </small>

  </h1>
</div><!--/.page-header-->

<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <div class='box'>
      <div id="user-profile-2" class="user-profile row-fluid">
        <div class="span3 center">
          <span class="profile-picture">
            <%= image_tag 'avatars/profile-pic.jpg', id: 'avatar2', class: 'editable', alt: t(:avatar, scope: :users, name: current_user.name) %>
          </span>
          <div class="space space-4"></div>
          <a href="#" class="btn btn-small btn-block btn-success">
            <i class="icon-plus-sign bigger-110"></i>
            加为好友
          </a>
  
          <a href="#" class="btn btn-small btn-block btn-primary">
            <i class="icon-envelope-alt"></i>
            发私信
          </a>
        </div>
  
        <div class="span9">
          <%= simple_form_for @user, :html => {class: 'form-horizontal'} do |f| %>
            <fieldset>
              <legend>
                <h4 class="blue">
                  <span class="middle"><%= current_user.name %></span>
                  <span class="label label-purple arrowed-in-right">
                    <i class="icon-circle smaller-80"></i>
                    <%= current_user.role %>
                  </span>
                </h4>
              </legend>
              <%= f.input :email do %>
                <span class="input-icon input-icon-right">
                  <%= f.text_field :email, disabled: true %>
                  <i class="icon-envelope"></i>
                </span>
              <% end %>
              <%= f.input :name do %>
                <span class="input-icon input-icon-right">
                  <%= f.text_field :name %>
                  <i class="icon-user"></i>
                </span>
              <% end %>
              <%= f.input :phone do %>
                <span class="input-icon input-icon-right">
                  <%= f.text_field :phone,
                          onkeyup: 'this.value=this.value.replace(/\D/g,\'\')',
                          onafterpaste: 'this.value=this.value.replace(/\D/g,\'\')' %>
                  <i class="icon-phone"></i>
                </span>
              <% end %>
              
              <div class="form-actions" >
                <%= button_tag class: 'btn btn-primary' do %>
                  <i class='icon-save'></i>
                  <%= t('common.save') %>
                <% end %>
              </div>
            </fieldset>
          <% end %>
        </div><!--/span-->
      </div>
    </div>
    
    <!--PAGE CONTENT ENDS-->
  </div><!--/.span-->
</div><!--/.row-fluid-->

