<% provide(:title, '用户管理') %>
<div class="page-header position-relative">
  <h1>
    用户管理
    <small>
      <i class="icon-double-angle-right"></i>
      您可以在这里浏览所有用户
      <% if current_user.admin? %>
        由于您是管理，还可以维护其他用户的信息
      <% end %>
    </small>

  </h1>
</div><!--/.page-header-->

<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <%= render partial: 'grids/user_grid' %>
    <div class='widget-box'>
      <div class="widget-header widget-header-blue widget-header-flat">
        <h4>查询条件</h4>
        <span class="widget-toolbar">
          <a href="#" data-action="collapse">
            <i class="icon-chevron-up"></i>
          </a>
        </span>
      </div>

      <div class='widget-body'>
        <div class="widget-main">
          <div class='row-fluid'>
            <div class='span2'>
              账号
            </div>
            <div class='span10'>
              <%= grid_filter @users_grid, :email_filter %>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span2'>
              用户名
            </div>
            <div class='span10'>
              <%= grid_filter @users_grid, :name_filter %>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span2'>
              角色
            </div>
            <div class='span3'>
              <%= grid_filter @users_grid, :role_filter %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class='row-fluid'>
      <div class='span12'>
        <div class='external-buttons'>
          <button class='btn btn-primary wg-external-submit-button', data-grid-name='user' >
            <i class='icon-search'></i>
            查询
          </button>
          <button class='btn wg-external-reset-button', data-grid-name='user' >
            <i class='icon-undo'></i>
            清空
          </button>
          <%= link_to users_path(:format => 'xls'), class: "btn btn-success pull-right" do%>
            <i class='icon-cloud-download'></i>
            导出Excel
          <% end %> 
        </div>
      </div>
    </div>
    <%= render_grid(@users_grid) %>
  </div>
</div> <!-- row-fluid -->

<script type="text/javascript">
$(function() {
  $('[data-rel=tooltip]').tooltip();
})
</script>
