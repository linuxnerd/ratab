<% provide(:title, t('menu.users_management')) %>
<div class="page-header position-relative">
  <h1>
    <%= t('menu.users_management') %>
    <small>
      <i class="icon-double-angle-right"></i>
      <%= t('users.you_can_browse_users_here') %>
      <% if current_user.admin? %>
        <%= t('you_can_edit_others_profile') %>
      <% end %>
    </small>

  </h1>
</div><!--/.page-header-->

<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <%= render partial: 'grids/user_grid' %>
    <div class='widget-box'>
      <div class="widget-header widget-header-blue widget-header-flat">
        <h4><%= t('common.query') %></h4>
        <span class="widget-toolbar">
          <a href="#" data-action="collapse">
            <i class="icon-chevron-up"></i>
          </a>
        </span>
      </div>

      <div class='widget-body'>
        <div class="widget-main">
          <div class='row-fluid'>
            <div class='span2'>
              <%= t('users.email') %>
            </div>
            <div class='span10'>
              <%= grid_filter @users_grid, :email_filter %>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span2'>
            <%= t('users.name') %>
            </div>
            <div class='span10'>
              <%= grid_filter @users_grid, :name_filter %>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span2'>
              <%= t('users.role') %>
            </div>
            <div class='span3'>
              <%= grid_filter @users_grid, :role_filter %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class='row-fluid'>
      <div class='span12'>
        <div class='external-buttons'>
          <button class='btn btn-primary wg-external-submit-button', data-grid-name='user' >
            <i class='icon-search'></i>
            <%= t('users.search') %>
          </button>
          <button class='btn wg-external-reset-button', data-grid-name='user' >
            <i class='icon-undo'></i>
            <%= t('users.clear') %>
          </button>
          <%= link_to users_path(:format => 'xls'), class: "btn btn-success pull-right" do%>
            <i class='icon-cloud-download'></i>
            <%= t('users.export_to_excel') %>
          <% end %> 
        </div>
      </div>
    </div>
    <%= render_grid(@users_grid) %>
  </div>
</div> <!-- row-fluid -->

<script type="text/javascript">
$(function() {
  $('[data-rel=tooltip]').tooltip();
})
</script>
