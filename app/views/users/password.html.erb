<% provide(:title, t('users.edit_password')) %>
<div class="page-header position-relative">
  <h1>
    <%= t('users.edit_password') %>
    <small>
      <i class="icon-double-angle-right"></i>
      <%= t('users.you_can_edit_password_here') %>
    </small>

  </h1>
</div><!--/.page-header-->

<div class="row-fluid">
  <div class="span12">
    <!--PAGE CONTENT BEGINS-->
    <%= simple_form_for @user, :html => {:class => 'form-horizontal'},
                :url => url_for(:action => 'change_password', :controller => 'users') do |f| %>
      <%= f.input :current_password do %>
        <span class="input-icon input-icon-right">
          <%= f.password_field :current_password %>
          <i class='icon-lock'></i>
        </span>
      <% end %>
      <%= f.input :password do %>
        <span class="input-icon input-icon-right">
          <%= f.password_field :password %>
          <i class='icon-lock'></i>
        </span>
      <% end %>
      <%= f.input :password_confirmation do %>
        <span class="input-icon input-icon-right">
          <%= f.password_field :password_confirmation %>
          <i class='icon-retweet'></i>
        </span>
      <% end %>
      
      <div class='form-actions'>
        <%= button_tag class: 'btn btn-primary' do %>
          <i class='icon-ok'></i>
          <%= t('common.save') %>
        <% end %>
      </div>
      
    <% end %>
    
    <!--PAGE CONTENT ENDS-->
  </div><!--/.span-->
</div><!--/.row-fluid-->


